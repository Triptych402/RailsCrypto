<% for x in @show_bitcoin['data'] %>
 
     <% if @bitcoin.symbol.upcase == x['symbol'] %>
         <% crypto_name = x['name'] %>
         <% crypto_price = x['quote']['USD']['price'] %><br/>
         <% crypto_rank = x['cmc_rank'] %> <br/><br/>
     <% end %>
 <% end %>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= crypto_name %></h3>
  </div>
  <div class="panel-body">
    


<h1><%= @bitcoin.symbol.upcase %></h1>

<br/>

<p>
	<strong>현재가: </strong> <%= number_to_currency(crypto_price) %>
</p>

<p>
	<strong>순위: </strong> <%= crypto_rank %>
</p>

<p>
  <strong>Cost per:</strong>
  <%= @bitcoin.cost_per %>
</p>

<p>
  <strong>Amount owned:</strong>
  <%= @bitcoin.amount_owned %>
</p>
  
</div>
 <div class="panel-footer">
	<%= link_to '수정', edit_bitcoin_path(@bitcoin) %> |
	<%= link_to '코인 삭제', bitcoin_path(@bitcoin), method: :delete, data: { confirm: 'Are you sure?' }%> |
	<%= link_to '뒤로', bitcoins_path %>
	
</div>
</div>

